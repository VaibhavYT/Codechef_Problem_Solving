#include <iostream>
#include<bits/stdc++.h>

using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n,a,b;
	    int c=0;
	    cin>>n>>a>>b;
	    while(n>1){
	    	n= n/2;
	    	c++;
	    }
	    long ans =0;
	    ans =(c*a)+((c-1)*b);
	    cout<<ans<<endl;

	    	}
	return 0;
}
